@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap')
@import "styles/color-scheme.styl"
@import "styles/icons.styl"
@import "styles/stylus-variables.styl"

body
  margin 0
  padding 0
  line-height 1.6
  background-color: var(--background-color)
  color: var(--text-color)
  font-family 'Lexend', sans-serif
  -webkit-tap-highlight-color: transparent

p
  margin: 8px 0

ul
  list-style: none
  padding: 0

li
  list-style: none
  padding: 0 0 0 24px
  margin: 4px 0 0 0
  position: relative;
  &:before
    content: ''
    position: absolute;
    left 1px
    top: 8px
    width 6px
    height 6px
    border 1.5px solid var(--text-color)
    border-radius 10px

li.new-ul-container
  margin: 0
  &:before
    content: none


.link
  color: var(--link-color)
  text-decoration underline

body
  --page-padding: 32px

@media screen and (max-width: $layout-break-point)
  body
    --page-padding: 12px

html
  margin 0
  padding 0

#app
  min-height 100vh

a
  color var(--text-color)
  text-decoration none

for $i in 1..6
  .mt-{$i}
    margin-top: 4px * (2 ** ($i - 1))

  .mb-{$i}
    margin-bottom: 4px * (2 ** ($i - 1))