body
  --text-color: black
  --text-color-70: rgba(0,0,0,.7)
  --text-color-50: rgba(0,0,0,.5)
  --background-color: white
  --background-semi-transparent: rgba(255,255,255,.5)
  --background-50-transparent: rgba(255,255,255,.5)
  --background-30-transparent: rgba(255,255,255,.3)
  --background-10-transparent: rgba(255,255,255,.1)
  --background-chat-bubble-from-system: #eeffd9
  --background-chat-bubble-from-user: #14a100
  --background-transition-border: linear-gradient(135deg, #ff4e50, #f9d423, #a2cc2e)
  --border-chat-bubble: rgba(0,0,0,.1)
  --background-avatar: rgba(0,0,0,.2)
  --background-light: rgba(0,0,0,.03)
  --text-color-secondary: rgba(0,0,0,.5)
  --text-color-hightlight: rgba(0,0,0,.1)
  --shadow-color: rgba(0,0,0,.3)
  --link-color: #3737ff
  --swiper-card-border-color: #eaeaea88

body[light-mode='dark']
  --text-color: white
  --text-color-70: rgba(255,255,255,.7)
  --text-color-50: rgba(255,255,255,.5)
  --background-color: rgb(20, 20, 20)
  --background-semi-transparent: rgba(20,20,20,.5)
  --background-50-transparent: rgba(20,20,20,.5)
  --background-30-transparent: rgba(20,20,20,.3)
  --background-10-transparent: rgba(20,20,20,.1)
  --background-chat-bubble-from-system: #424242
  --background-chat-bubble-from-user: #14a100
  --background-transition-border: linear-gradient(135deg, #d84446, #dcbb20, #84a626)
  --border-chat-bubble: rgba(255, 255, 255, .3)
  --background-avatar: rgba(255,255,255,.2)
  --background-light: rgba(255,255,255,.1)
  --text-color-secondary: rgba(255,255,255,.5)
  --text-color-hightlight: rgba(255,255,255,.1)
  --shadow-color: rgba(255,255,255,.3)
  --link-color: #6060ff
  --swiper-card-border-color: #2a2a2a88


body
  margin: 0;
  min-height: 100vh;

  background-image: linear-gradient(
          135deg, /* 方向可以自定，90deg为从左到右 */
          rgba(255, 0, 0, 0.2),     /* Red */
          rgba(255, 165, 0, 0.2),  /* Orange */
          rgba(255, 255, 0, 0.2),   /* Yellow */
          rgba(0, 255, 0, 0.2),     /* Green */
          rgba(0, 191, 255, 0.2),   /* Blue */
          rgba(75, 0, 130, 0.2),    /* Indigo */
          rgba(238, 130, 238, 0.2), /* Violet */
          rgba(255, 0, 0, 0.2)      /* 回到Red，形成无缝循环 */
  );
  background-size: 400% 400%;

body[light-mode='dark']
  background-image: linear-gradient(
          135deg, /* 方向可以自定，90deg为从左到右 */
          rgba(255, 0, 0, 0.15),     /* Red */
          rgba(255, 165, 0, 0.15),  /* Orange */
          rgba(255, 255, 0, 0.15),   /* Yellow */
          rgba(0, 255, 0, 0.15),     /* Green */
          rgba(255, 0, 0, 0.15)      /* 回到Red，形成无缝循环 */
  );

